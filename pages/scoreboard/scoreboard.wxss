.bar {
  width:25%;
  height:100vh;
}

.bar-item {
  box-sizing: border-box;
  border-style: dashed;
  border-color: black;
  border-top: 0px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 20vh;
  font-size: 8vh;
}

.bar-left-item {
  border-left: 0px;
}

.bar-last-item {
  border-bottom: 0px;
}

.bar-right-item {
  border-right: 0px;
}

.score {
  font-size: 53vh;
  width:50%;
  height:100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
